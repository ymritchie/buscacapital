<?xml version="1.0" encoding="UTF-8"?>
<faces-config version="2.1" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_1.xsd">
	
	<application>
		<navigation-handler>br.com.buscacapital.util.Jsf2NavigationHandler</navigation-handler>
		<el-resolver>org.springframework.web.jsf.el.SpringBeanFacesELResolver</el-resolver>
	</application>
	
	<converter>
	    <description>Converter para CPF e CNPJ</description>
	    <converter-id>cpfCnpjConverter</converter-id>
	    <converter-class>br.com.buscacapital.converter.CpfCnpjConverter</converter-class>
	</converter>
	
	<converter>
	    <description>Converter para Telefone</description>
	    <converter-id>telefoneConverter</converter-id>
	    <converter-class>br.com.buscacapital.converter.TelefoneConverter</converter-class>
	</converter>
	
	<converter>
	    <description>Converter para a Entidade Base</description>
	    <converter-id>entidadeBaseConverter</converter-id>
	    <converter-class>br.com.buscacapital.converter.EntidadeBaseConverter</converter-class>
	</converter>
</faces-config>
